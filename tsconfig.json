{
  "compilerOptions": {
    "module": "Node16",
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "outDir": "out",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "types": ["vscode", "node"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
